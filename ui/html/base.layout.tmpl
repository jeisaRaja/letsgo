{{define "base"}}
<!doctype html>
<html lang='en' style="min-height:100vh;">
<head>
<meta charset='utf-8'>
<title>{{template "title" .}} - Snippetbox</title>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">

</head>


<body class="p-5" style="height:100%; display:flex; flex-direction:column; background-color:black;">
<header>

</header>
<nav class="navbar p-5 has-background-light" role="navigation">
{{if .AuthenticatedUser}}
<h1><a  class="navbar-item is-size-4" href='/'>Snippetbox</a></h1>

{{else}}
      <div class="navbar-end">
        <a href='/' class="navbar-item">Home</a>
        <a href='/user/login' class="navbar-item">Login</a>
        <a href='/user/signup' class="navbar-item">Sign Up</a>
      </div>
{{end}}

{{if .AuthenticatedUser}}
<p>{{.AuthenticatedUser.Name}}</p>
<div class="navbar-end">
  <form method="POST" action="/user/logout">
  <input type='hidden' name='csrf_token' value='{{.CSRFToken}}'>
  <a class="navbar-item">logout</a>
  </form>
</div>
{{end}}
</nav>
{{if .AuthenticatedUser}}
<a href='/snippet/create' class="button mt-5">Create snippet</a>
{{end}}

{{with .Flash}}
<h1>{{.}}</h1>
{{end}}
{{template "body" .}}

</body>
{{template "footer" .}}
</html>
{{end}}

